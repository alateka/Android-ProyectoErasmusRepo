<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="net.iescierva.erasmus">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission
            android:name="android.permission.QUERY_ALL_PACKAGES"
            tools:ignore="QueryAllPackagesPermission"/>
    <uses-permission
            android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
            tools:ignore="ScopedStorage"/>

    <application
            android:name=".App"
            android:allowBackup="true"
            android:icon="@mipmap/erasmus_app_logo"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/erasmus_app_logo"
            android:supportsRtl="true"
            android:theme="@style/Theme.Erasmus"
            android:usesCleartextTraffic="true">
        <activity
                android:name=".View.AboutActivity"
                android:exported="true"
                android:label="@string/label_about"/>
        <activity
                android:name=".View.EditActivity"
                android:exported="true"/>
        <activity
                android:name=".View.Home"
                android:exported="true"
                android:label="@string/txt_user_data"/>
        <activity
                android:name=".View.LoginActivity"
                android:exported="true"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <provider
                android:name="androidx.core.content.FileProvider"
                android:authorities="${applicationId}.provider"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/file_path"/>
        </provider>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.LoginActivity">
    <ImageView
            android:src="@drawable/erasmuslogo"
            android:layout_width="333dp"
            android:layout_height="82dp" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="TODO"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.118"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/enterEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:minHeight="48dp" android:importantForAutofill="no"
            android:hint="@string/hintEmail"
            android:inputType="textEmailAddress" android:textSize="23sp"
            android:fontFamily="@font/ubuntu"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.352"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/enterPassword"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:minHeight="48dp"
            android:hint="@string/hintPassword" android:textSize="23sp"
            android:fontFamily="@font/ubuntu" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.477"/>
    <Button
            android:text="@string/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnLogin"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            android:textSize="31sp"
            android:fontFamily="@font/ubuntu"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.675"/>
    <TextView
            android:layout_width="383dp"
            android:layout_height="43dp" android:id="@+id/txtMessage"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/ubuntu" android:textSize="15sp" android:textColor="#AC0000"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.905" app:layout_constraintHorizontal_bias="0.589"
            android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.AboutActivity"
        android:background="@drawable/gradiant">

    <TextView
            android:text="@string/txt_app_description"
            android:layout_width="375dp"
            android:layout_height="242dp"
            android:id="@+id/description_app"
            android:textSize="24sp"
            android:fontFamily="@font/ubuntu"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <VideoView
            android:layout_width="323dp"
            android:layout_height="187dp" android:id="@+id/video_erasmus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="200dp" app:layout_constraintTop_toBottomOf="@+id/description_app"/>
</androidx.constraintlayout.widget.ConstraintLayout>
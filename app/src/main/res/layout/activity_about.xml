<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.AboutActivity"
        android:background="@drawable/gradiant">

    <TextView
            android:text="@string/txt_app_description"
            android:layout_width="380dp"
            android:layout_height="370dp"
            android:id="@+id/description_app"
            android:textSize="24sp"
            android:fontFamily="@font/ubuntu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#FFFFFF"
            android:textAlignment="textStart" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.087" app:layout_constraintHorizontal_bias="0.384"/>
</androidx.constraintlayout.widget.ConstraintLayout>
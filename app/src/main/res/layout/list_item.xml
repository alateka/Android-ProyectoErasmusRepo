<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeightLarge" android:orientation="horizontal"
                android:layout_marginTop="15dp" android:background="#F1F1F1">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="49dp" app:srcCompat="@android:drawable/ic_input_get"
            android:id="@+id/image_view" android:layout_marginTop="15dp" android:paddingEnd="7dp"
            android:paddingStart="9dp" android:contentDescription="@string/erasmus_logo_description"/>
    <TextView
            android:id="@+id/document_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/image_view"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:fontFamily="@font/ubuntu"/>
    <TextView
            android:id="@+id/document_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/image_view"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:fontFamily="@font/ubuntu"/>


</RelativeLayout>